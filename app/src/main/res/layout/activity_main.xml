<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <ProgressBar
            android:id="@+id/progressbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"
            android:id="@+id/rl_main_layout">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:id="@+id/cv_toolbar"
                android:elevation="@dimen/padding_x_large">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/rl_toolbar"
                    android:background="@color/purple_200">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_margin="@dimen/padding_large"
                        app:cardCornerRadius="@dimen/padding_x_small">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/et_get_city_name"
                            android:hint="@string/search"
                            android:drawableStart="@drawable/ic_baseline_search_24"
                            android:drawablePadding="@dimen/padding_large"
                            android:imeOptions="actionSearch"
                            android:inputType="text"
                            android:paddingStart="@dimen/padding_large"
                            android:paddingEnd="@dimen/padding_large"
                            android:textColor="@color/black"
                            android:background="@color/white">

                        </EditText>

                    </androidx.cardview.widget.CardView>

                </RelativeLayout>


            </androidx.cardview.widget.CardView>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/cv_toolbar"
                android:id="@+id/rl_sub_layout">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:id="@+id/iv_weather_bg"
                        android:src="@drawable/snow_bg">

                    </ImageView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding_large"
                        android:layout_marginStart="@dimen/padding_x_large"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/tv_date_and_time"
                            android:textColor="@color/black"
                            android:text="@string/demo_date">

                        </TextView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/padding_large"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/tv_day_max_temp"
                                android:textColor="@color/white"
                                android:text="@string/day"
                                android:layout_weight="3"
                                android:textSize="@dimen/text_large"></TextView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/tv_day_min_temp"
                                android:textColor="@color/white"
                                android:text="@string/day"
                                android:layout_weight="1"
                                android:textSize="@dimen/text_large"></TextView>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/padding_large"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:id="@+id/tv_temp"
                                android:textColor="@color/white"
                                android:text="@string/main_temp"
                                android:layout_weight="1"
                                android:textSize="@dimen/text_super_large"></TextView>

                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_marginTop="@dimen/padding_large"
                                android:layout_marginEnd="@dimen/padding_large"
                                android:id="@+id/iv_weather_icon"
                                android:src="@drawable/clear"></ImageView>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/padding_large"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/tv_feels_like"
                                android:textColor="@color/white"
                                android:text="@string/feel_alike"
                                android:layout_weight="1"
                                android:textSize="@dimen/text_large"></TextView>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/tv_weather_type"
                                android:textColor="@color/white"
                                android:text="@string/weather_type"
                                android:layout_weight="3"
                                android:textSize="25sp"></TextView>


                        </LinearLayout>


                    </LinearLayout>

                </FrameLayout>


                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/padding_x_large"
                    android:layout_marginRight="@dimen/padding_x_large"
                    android:layout_marginBottom="65dp"
                    android:elevation="@dimen/padding_x_small"
                    android:paddingBottom="@dimen/padding_x_large"
                    app:cardCornerRadius="@dimen/padding_large"
                    app:cardElevation="@dimen/padding_x_small"
                    app:cardMaxElevation="@dimen/padding_x_small">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="208dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/ll_main_bg_above"
                            android:layout_width="match_parent"
                            android:layout_height="115dp"
                            android:layout_marginTop="0dp"
                            android:background="@drawable/snow_bg"
                            android:orientation="horizontal">

                            <RelativeLayout
                                android:id="@+id/rl_pressure_wrapper"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:padding="@dimen/padding_x_small">


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:orientation="vertical"
                                    android:padding="@dimen/padding_x_small">

                                    <ImageView
                                        android:layout_width="25dp"
                                        android:layout_height="25dp"
                                        android:layout_gravity="center_horizontal"
                                        android:src="@drawable/pressure">

                                    </ImageView>

                                    <TextView
                                        android:id="@+id/tv_pressure"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:text="@string/default_numbers"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/text_x_large">

                                    </TextView>

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:text="Pressure"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/text_med">

                                    </TextView>

                                </LinearLayout>


                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/rl_humidity_wrapper"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:padding="@dimen/padding_x_small">


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:orientation="vertical"
                                    android:padding="@dimen/padding_x_small">

                                    <ImageView
                                        android:layout_width="25dp"
                                        android:layout_height="25dp"
                                        android:layout_gravity="center_horizontal"
                                        android:src="@drawable/humidity">

                                    </ImageView>

                                    <TextView
                                        android:id="@+id/tv_humidity"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:text="@string/default_numbers"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/text_x_large">

                                    </TextView>

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:text="Humidity"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/text_med">

                                    </TextView>

                                </LinearLayout>


                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/rl_wind_speed_wrapper"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:padding="@dimen/padding_x_small">


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:orientation="vertical"
                                    android:padding="@dimen/padding_x_small">

                                    <ImageView
                                        android:layout_width="25dp"
                                        android:layout_height="25dp"
                                        android:layout_gravity="center_horizontal"
                                        android:src="@drawable/wind_speed">

                                    </ImageView>

                                    <TextView
                                        android:id="@+id/tv_wind_speed"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:text="@string/default_numbers"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/text_x_large">

                                    </TextView>

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:text="Wind Speed"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/text_med">

                                    </TextView>

                                </LinearLayout>


                            </RelativeLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_main_bg_below"
                            android:layout_width="match_parent"
                            android:layout_height="115dp"
                            android:layout_marginTop="0dp"
                            android:background="@drawable/snow_bg"
                            android:orientation="horizontal">

                            <RelativeLayout
                                android:id="@+id/rl_temp_farenhite_wrapper"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:padding="@dimen/padding_x_small">


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:orientation="vertical"
                                    android:padding="@dimen/padding_x_small">

                                    <ImageView
                                        android:layout_width="25dp"
                                        android:layout_height="25dp"
                                        android:layout_gravity="center_horizontal"
                                        android:src="@drawable/temp_farenhite">

                                    </ImageView>

                                    <TextView
                                        android:id="@+id/tv_temp_farenhite"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:text="@string/default_numbers"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/text_x_large">

                                    </TextView>

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:text="Temp"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/text_med">

                                    </TextView>

                                </LinearLayout>


                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/rl_sunrise_wrapper"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:padding="@dimen/padding_x_small">


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:orientation="vertical"
                                    android:padding="@dimen/padding_x_small">

                                    <ImageView
                                        android:layout_width="25dp"
                                        android:layout_height="25dp"
                                        android:layout_gravity="center_horizontal"
                                        android:src="@drawable/sunrise_wrapper">

                                    </ImageView>

                                    <TextView
                                        android:id="@+id/tv_sunrise"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:text="@string/default_numbers"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/text_x_large">

                                    </TextView>

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:text="Sunrise"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/text_med">

                                    </TextView>

                                </LinearLayout>


                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/rl_sunset_wrapper"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:padding="@dimen/padding_x_small">


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:orientation="vertical"
                                    android:padding="@dimen/padding_x_small">

                                    <ImageView
                                        android:layout_width="25dp"
                                        android:layout_height="25dp"
                                        android:layout_gravity="center_horizontal"
                                        android:src="@drawable/sunset_wrapper">

                                    </ImageView>

                                    <TextView
                                        android:id="@+id/tv_sunset"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:text="@string/default_numbers"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/text_x_large">

                                    </TextView>

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:text="Sunset"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/text_med">

                                    </TextView>

                                </LinearLayout>


                            </RelativeLayout>

                        </LinearLayout>


                    </LinearLayout>


                </com.google.android.material.card.MaterialCardView>


            </RelativeLayout>

        </RelativeLayout>


    </RelativeLayout>
</layout>